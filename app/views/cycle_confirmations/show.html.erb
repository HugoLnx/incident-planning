<% content_for :css do %>
  <style>
    .confirm-form, .cancel-form {
      display: inline-block;
      float: right;
      margin-right: 20px;
    }

    @media screen and (min-width: 800px) {
      .float-container {
        width: 800px;
      }
    }

    h2 {
      margin-top: 0;
    }

    .post-forms {
      clear: left;
    }
  </style>
<% end %>

<% content_for :metatags do %>
  <meta name="viewport" content="width=device-width" />
<% end %>

<h2>Incident Objectives Confirmation</h2>

<div class="float-container">
  <%= simple_form_for([@incident, @form202], url: new_incident_cycle_path(@incident), html: {class: "cancel-form"}) do |f| %>
    <%= render partial: "cycles/form_inputs", locals: {f: f, form202: @form202, all_hidden: true} %>

    <div class="form-actions">
      <%= f.button :submit, "Cancel" %>
    </div>
  <% end %>

  <%= simple_form_for([@incident, @form202], html: {class: "confirm-form"}) do |f| %>
    <%= render partial: "cycles/form_inputs", locals: {f: f, form202: @form202, all_hidden: true} %>

    <div class="form-actions">
      <%= f.button :submit, "Confirm" %>
    </div>
  <% end %>

  <div class="post-forms"></div>
<div>

<%= render partial: "cycles/cycle", locals: {form202: @form202, incident: @incident} %>
