<!DOCTYPE html>
<html>
<head>
  <title>IncidentPlanning</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= yield :css %>
  <%= javascript_include_tag "application" %>
  <%= yield :js %>
  <%= yield :metatags %>
  <%= csrf_meta_tags %>
</head>
<body>

	<header>
		<h1>Incident Planning System</h1>
		<nav class="main-nav">
			<ul>
				<%- if user_signed_in? %>
					<li><%= link_to "Incidents List", incidents_path %></li>
					<li><%= link_to "User Profile", edit_user_registration_path %></li>
					<li><%= link_to "Reuse Config", edit_reuse_configuration_path %></li>
					<li><%= link_to "Tool Config", edit_features_config_path %></li>
					<li><%= link_to t("auth.logout"), destroy_user_session_path, method: :delete %></li>
				<% else %>
					<li><%= link_to t("auth.login"), new_user_session_path %></li>
					<li><%= link_to "Sign up", new_user_registration_path %></li>
				<% end -%>
			</ul>
		</nav>
	</header>

	<section class="main-content">
		<p class="notice"><%= flash[:notice] %></p>
		<p class="alert"><%= flash[:alert] %></p>

		<%= yield %>
	</section>

</body>
</html>
