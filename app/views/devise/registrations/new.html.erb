<% content_for :css do %>
  <%= stylesheet_link_tag "user_form", media: "all" %>
<% end %>

<% content_for :js do %>
  <%= javascript_include_tag "users", "data-turbolinks-track" => true %>
<% end %>

<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <fieldset>
      <legend>My Info</legend>
			<%= f.input :email, hint: "required" %>
			<%= f.input :name, autofocus: true, hint: "required" %>
      <%= f.input :phone, placeholder: "(21)99999-9999", hint: "required" %>
      <%= f.input :company_id, as: :string, input_html: {
        class: "autocomplete-company-input"
      } %>
    </fieldset>

    <fieldset>
      <legend>My Roles</legend>
      <%= f.input :roles_ids, as: :roles_collection, available_roles: @roles, label: false %>
    </fieldset>

    <fieldset>
      <legend>My Password</legend>
			<%= f.input :password, hint: "required"  %>
			<%= f.input :password_confirmation, hint: "required" %>
		</fieldset>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
