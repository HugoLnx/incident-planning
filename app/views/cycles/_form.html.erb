<%= simple_form_for([@incident, @cycle]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :from, as: :datetime %>
    <%= f.input :to, as: :datetime %>
    <%= f.input :number, as: :integer %>

    <%= f.input :objectives_text, disabled: @cycle.persisted?, as: :text, input_html: {cols: 100, rows: 10} %>
    <%= f.input :priorities, as: :text, input_html: {cols: 100, rows: 10} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
