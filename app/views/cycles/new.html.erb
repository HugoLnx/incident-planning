<%- content_for :js do %>
	<%= javascript_include_tag :new_cycle %>
<% end -%>

<% if @last_cycle %>
  <% content_for :metatags do %>
    <meta name="restorable_cycle_objectives_text" content="<%= @last_cycle.objectives_text %>" />
    <meta name="restorable_cycle_priorities" content="<%= @last_cycle.priorities %>" />
  <% end %>
<% end %>


<h2>New Cycle - Incident Objectives</h2>

<div class="incident-name">
	<strong>Incident Name:</strong>
	<%= link_to @incident.name, incident_cycles_path(@incident) %>
</div>

<%= render partial: 'confirmation_form', locals: {form202: @cycle, from_is_mandatory: @from_is_mandatory} %>

<%= link_to 'Back', incident_cycles_path(@incident) %>
